# Copy this file to terraform.tfvars and update with your values

project_id = "your-gcp-project-id"
region     = "us-central1"
zone       = "us-central1-a"

# Optional: Override default values
cluster_name = "feedback-cluster"
node_count   = 3
machine_type = "e2-medium"
preemptible_nodes = false

# Pub/Sub configuration
pubsub_topic_name        = "customer-feedback"
pubsub_subscription_name = "customer-feedback-sub"

# Spanner configuration
spanner_database_name = "feedback-db"

# BigQuery configuration
bigquery_dataset_id = "feedback_analysis"
bigquery_table_id   = "feedback_analysis"
